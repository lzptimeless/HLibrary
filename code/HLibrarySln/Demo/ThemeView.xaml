                </Button>
            </WrapPanel>
            <WrapPanel Margin="0,10,0,0">
                <CheckBox
                    Margin="5"
                    VerticalAlignment="Bottom"
                    Content="选择框-已选"
                    IsChecked="True"
                    Style="{StaticResource checkbox}" />
                <CheckBox
                    Margin="5"
                    VerticalAlignment="Bottom"
                    Content="选择框-未选"
                    IsChecked="False"
                    Style="{StaticResource checkbox}" />
                <CheckBox
                    Margin="5"
                    VerticalAlignment="Bottom"
                    Content="选择框-不确定"
                    IsChecked="{x:Null}"
                    IsThreeState="True"
                    Style="{StaticResource checkbox}" />
                <RadioButton
                    Margin="5"
                    VerticalAlignment="Bottom"
                    Content="单选框-已选"
                    IsChecked="True"
                    Style="{StaticResource radiobutton}" />
                <RadioButton
                    Margin="5"
                    VerticalAlignment="Bottom"
                    Content="单选框-未选"
                    Style="{StaticResource radiobutton}" />
            </WrapPanel>
            <WrapPanel Margin="0,10,0,0">
                <ScrollViewer
                    Width="200"
                    Height="100"
                    Margin="5"
                    HorizontalScrollBarVisibility="Auto"
                    Style="{StaticResource scrollviewer}">
                    <Border Width="400" Height="200" />
                </ScrollViewer>
                <ListBox
                    Width="200"
                    Height="100"
                    Margin="5"
                    ItemsSource="{StaticResource StringArray}"
                    Style="{StaticResource listbox}" />
            </WrapPanel>
            <WrapPanel Margin="0,10,0,0">
                <TextBox
                    Width="200"
                    Margin="5"
                    Style="{StaticResource textbox}"
                    Text="输入框" />
                <ComboBox
                    Width="200"
                    Margin="5"
                    ItemsSource="{StaticResource StringArray}"
                    SelectedIndex="0"
                    Style="{StaticResource combobox}" />
                <ComboBox
                    Width="200"
                    Margin="5"
                    IsEditable="True"
                    ItemsSource="{StaticResource StringArray}"
                    SelectedIndex="0"
                    Style="{StaticResource combobox}" />
            </WrapPanel>
            <WrapPanel Margin="0,10,0,0">
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource textblock}"
                    Text="工具提示">
                    <TextBlock.ToolTip>
                        <ToolTip
                            Width="100"
                            Height="50"
                            Content="通用提示工具" />
                    </TextBlock.ToolTip>
                </TextBlock>
                <ProgressBar
                    Width="200"
                    Margin="5"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource progressbar}"
                    Value="80" />
                <ProgressBar
                    Width="200"
                    Margin="5"
                    VerticalAlignment="Bottom"
                    IsIndeterminate="True"
                    Style="{StaticResource progressbar}" />
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
